{{!--layouts/dashlayout.hbs---}}
  {{#each dashsettings}}
  <ul>  
    {{!-- <li>userid: {{userid}}</li>
    <li>username: {{username}}</li>
    <li>nickname: {{nickname}}</li>
    <li>location: {{location}}</li>
    <li>timezone: {{timezone}}</li> --}}
  </ul>
  {{/each}}

<div class="container">
    {{#each dashsettings}}
      <div class="flipBox" id='box{{placement}}'>
        <div class='front widget{{widgetid}}'>
            <div class='widget'>
              <i class="fa fa-plus-circle fa-4x" aria-hidden="true"></i>
              {{!-- placement{{placement}}
                widgetid {{widgetid}} --}}
            </div>
         
        </div>
        <div class='back'>
              <div onclick="date(this)" class='date option'><i class="fa fa-calendar-o" aria-hidden="true"></i> Date</div>
              <div onclick="calendar(this)" class='calendar option'><i class="fa fa-calendar" aria-hidden="true"></i> Calendar</div>
              <div onclick="clock(this)" class='clock option'><i class="fa fa-clock-o" aria-hidden="true"></i> Clock</div>
              <div onclick="weather(this)" class='weather option'><i class="fa fa-sun-o" aria-hidden="true"></i> Weather</div>
              <div onclick="forecast(this)" class='forecast option'><i class="fa fa-cloud" aria-hidden="true"></i> Forecast</div>
              <div onclick="news(this)"  class='news option'><i class="fa fa-newspaper-o" aria-hidden="true"></i> News</div>
              <div onclick="greeting(this,'{{nickname}}')" class='greeting option'><i class="fa fa-comment-o" aria-hidden="true"></i> Greeting</div>
              <div onclick="reminder(this)" class='reminder option'><i class="fa fa-bell" aria-hidden="true"></i> Reminder</div>
              
          </div>
        </div>
        
    {{/each}}
    
</div>

